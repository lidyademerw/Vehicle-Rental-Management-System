<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vehiclerentalsystem.AdminDashboardController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="20.0" spacing="15.0">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Admin Dashboard - Fleet Management" />
                <TableView fx:id="vehicleTable" prefHeight="250.0" prefWidth="500.0">
                    <columns>
                        <TableColumn fx:id="plateColumn" prefWidth="150.0" text="Plate Number" />
                        <TableColumn fx:id="modelColumn" prefWidth="200.0" text="Model" />
                        <TableColumn fx:id="priceColumn" prefWidth="150.0" text="Daily Price" />
                  <TableColumn fx:id="statusColumn" prefWidth="75.0" text="Status" />
                    </columns>
                </TableView>
                <HBox spacing="10.0">
                    <children>
                        <TextField fx:id="newPlateField" promptText="Plate Number" />
                        <TextField fx:id="newModelField" promptText="Model" />
                        <TextField fx:id="newPriceField" promptText="Price" />
                        <Button onAction="#onAddButtonClick" text="Add Car" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button onAction="#onDeleteButtonClick" style="-fx-background-color: #ff4444; -fx-text-fill: white;" text="Delete Selected Car" />
                        <Button onAction="#onLogoutButtonClick" text="Logout" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
