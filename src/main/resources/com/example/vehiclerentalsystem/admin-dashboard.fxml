<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vehiclerentalsystem.AdminDashboardController">
    <children>
        <VBox alignment="CENTER" layoutX="25.0" layoutY="20.0" spacing="15.0">
            <children>
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Admin Fleet Management" />

                <TableView fx:id="vehicleTable" prefHeight="300.0" prefWidth="900.0">
                    <columns>
                        <TableColumn fx:id="plateColumn" prefWidth="90.0" text="Plate" />
                        <TableColumn fx:id="modelColumn" prefWidth="130.0" text="Model" />
                        <TableColumn fx:id="priceColumn" prefWidth="70.0" text="Price" />
                        <TableColumn fx:id="statusColumn" prefWidth="70.0" text="Rented" />

                        <TableColumn fx:id="renterNameColumn" prefWidth="130.0" text="Renter Name" />
                        <TableColumn fx:id="contactColumn" prefWidth="120.0" text="Contact Info" />
                        <TableColumn fx:id="startColumn" prefWidth="120.0" text="Start Date" />
                        <TableColumn fx:id="endColumn" prefWidth="120.0" text="End Date" />
                    </columns>
                </TableView>

                <HBox spacing="10.0" alignment="CENTER">
                    <children>
                        <TextField fx:id="newPlateField" prefWidth="120.0" promptText="Plate Number" />
                        <TextField fx:id="newModelField" prefWidth="130.0" promptText="Model Name" />
                        <TextField fx:id="newPriceField" prefWidth="70.0" promptText="Price" />
                        <Button onAction="#onAddButtonClick" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Add Car" />
                        <Button onAction="#onAddMotorcycleButtonClick" style="-fx-background-color: #ff9800; -fx-text-fill: white;" text="Add Motorcycle" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button onAction="#onReturnButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Mark as Returned" />
                        <Button onAction="#onDeleteButtonClick" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Remove Vehicle" />
                        <Button onAction="#onLogoutButtonClick" text="Logout" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>