<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vehiclerentalsystem.CustomerDashboardController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="20.0" spacing="15.0">
            <children>
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Customer Portal - Available Vehicles" />
                <TableView fx:id="availableTable" prefHeight="300.0" prefWidth="500.0">
                    <columns>
                        <TableColumn fx:id="modelCol" prefWidth="250.0" text="Car Model" />
                        <TableColumn fx:id="priceCol" prefWidth="250.0" text="Price Per Day ($)" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button onAction="#onRentButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="RENT SELECTED CAR" />
                        <Button onAction="#onLogoutButtonClick" text="Logout" />
                    </children>
                </HBox>
                <Label fx:id="statusLabel" style="-fx-text-fill: green; -fx-font-weight: bold;" />
            </children>
        </VBox>
    </children>
</AnchorPane>
